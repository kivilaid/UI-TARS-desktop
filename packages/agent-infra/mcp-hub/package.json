{
  "name": "@agent-infra/mcp-hub",
  "version": "1.0.3",
  "description": "A manager server for MCP servers that handles process management and tool routing",
  "author": "Ravitemer",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ravitemer/mcp-hub.git"
  },
  "keywords": [
    "mcp",
    "mcp-hub",
    "model-context-protocol",
    "mcp-servers-manager",
    "server",
    "process-management",
    "mcp-tool-routing"
  ],
  "files": [
    "dist/cli.js",
    "LICENSE.md",
    "README.md"
  ],
  "engines": {
    "node": ">=18"
  },
  "main": "./dist/cli.js",
  "bin": {
    "mcp-hub": "dist/cli.js"
  },
  "scripts": {
    "start": "node ./src/utils/cli.ts --port 3000 --config ~/mcp-hub/mcp-servers.json",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "rslib build",
    "postbuild": "chmod +x dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "update-data": "node scripts/update-data.js",
    "release:patch": "bash scripts/release.sh patch",
    "release:minor": "bash scripts/release.sh minor",
    "release:major": "bash scripts/release.sh major",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@rslib/core": "^0.12.1",
    "@types/express": "^5.0.3",
    "@types/uuid": "^10.0.0",
    "@types/yargs": "^17.0.33",
    "@vitest/coverage-v8": "^3.2.4",
    "chokidar": "^4.0.3",
    "eslint": "^9.31.0",
    "express": "^4.21.2",
    "fast-deep-equal": "^3.1.3",
    "globals": "^16.2.0",
    "mock-fs": "^5.5.0",
    "nock": "^14.0.5",
    "nodemon": "^3.1.10",
    "open": "^10.1.2",
    "prettier": "^3.6.2",
    "reconnecting-eventsource": "^1.6.4",
    "supertest": "^7.1.1",
    "typescript": "^5.9.2",
    "uuid": "^11.1.0",
    "vitest": "^3.2.4",
    "yargs": "^17.7.2"
  },
  "dependencies": {
    "json5": "^2.2.3"
  }
}
